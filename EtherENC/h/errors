#ifndef _errors_h
#define _errors_h

#include "kernel.h"

/* TODO: Get a real error-number allocation */
#define ENC_ERRBASE 0x7FFF00

enum enc_err {
	ENC_ERR_NO_PODULES = ENC_ERRBASE,
	ENC_ERR_NO_DEVICE,
	ENC_ERR_SINGLE_INSTANCE,
	ENC_ERR_FAULTY,
	ENC_ERR_MAX
};

_kernel_oserror *enc_error(enum enc_err error);

#endif
