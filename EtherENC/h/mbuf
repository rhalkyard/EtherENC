#ifndef _mbuf_h
#define _mbuf_h

/* NOTE: All other source should include THIS header, and not sys/mbuf.h, since
 * MBCTL_NAME must be set correctly before including sys/mbuf.h. This also means
 * that this header must be included before any other TCPIPLibs header that
 * includes sys/mbuf.h (in partucluar, net/if.h and netinet/if_ether.h). Ugh
 * what a mess.
 */

#include "kernel.h"

#define MBCTL_NAME MBCTL
#include "sys/mbuf.h"

extern struct mbctl MBCTL;
extern int mbufsession;

void enc_stop_mbuf_session(void);
_kernel_oserror *enc_start_mbuf_session(void);

#endif
